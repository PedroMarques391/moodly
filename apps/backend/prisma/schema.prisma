generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "esm"
  runtime      = "nodejs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BaselineMood {
  very_low
  low
  neutral
  good
  very_good
}

model Users {
  id               String        @id @default(uuid())
  name             String
  email            String        @unique
  password         String
  createdAt        DateTime      @default(now())
  image            String
  bio              String?
  baselineMood     BaselineMood?
  triggers         String?
  copingStrategies String?
  goals            String?
  updatedAt        DateTime      @updatedAt
}
